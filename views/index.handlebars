<div class="container">

  <img src="/assets/img/burger.png" alt="" class="img-rounded center-block">
  <h1 class="title">Eat-Da-Burger!</h1>

<div class="row">
  <div class="col-md-6">
    <ul class="pull-right">

      {{#each burgers}}
      {{#unless devoured}}
      <li>
            <div class="burgerLabel pull-left">
            <pre>{{id}}. {{burger_name}}</pre>
          </div>
            <div class="buttonDevour pull-right">
            <form action="/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="true">
            <button type="submit" class="btn btn-secondary">Devour It!</button>
          </form>
        </div>
      </li>
      {{/unless}}
      {{/each}}
    </ul>

  </div>
 <div class="col-md-6">
   <ul class="pull-left">
     {{#each burgers}}
     {{#if devoured}}
     <li>
       <s>{{id}}. {{burger_name}} eaten!</s>
     </li>

     {{/if}}

     {{/each}}

   </ul>


 </div>
</div>




  <div class="text-center inputArea">



  <form class="create-update-form" action="/" method="POST">

    <div class="form-group">
        <textarea id="bur" name="burger_name"></textarea>
    </div>


    <button type="submit" class="btn btn-primary">Submit</button>

  </form>
  <p class="inst">Enter a buger you want to eat and Click the "Submit" button.</p>
  </div>
</div>
